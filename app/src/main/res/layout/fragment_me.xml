<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#F0F0F0">

    <TextView
        android:id="@+id/home_ys"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/user_avatar"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/user_avatar"
        android:text="请登陆账号"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/inters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_avatar"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/errorQuestion_layout"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_error" />

            <TextView
                android:id="@+id/FAVORITES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看错题"
                android:gravity="center"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/examRecord_layout"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_paper" />

            <TextView
                android:id="@+id/RECORDING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="模考记录" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pwdModify_layout"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_help_64" />

            <TextView
                android:id="@+id/ORDER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="修改密码" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_account_box_24" />

            <TextView
                android:id="@+id/WALLET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="退出账号" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
